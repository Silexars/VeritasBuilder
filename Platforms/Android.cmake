INCLUDE("Platforms/Android/Application.cmake")
INCLUDE("Platforms/Android/Service.cmake")
INCLUDE("Platforms/Android/Wallpaper.cmake")

FUNCTION(VERITAS_ANDROID_ADD_EXECUTABLE TARGET PARAMETER)
    IF (PARAMETER STREQUAL "WALLPAPER")
        VERITAS_ANDROID_ADD_WALLPAPER(${TARGET} ${ARGN})
    ELSEIF(PARAMETER STREQUAL "SERVICE")
        VERITAS_ANDROID_ADD_SERVICE(${TARGET} ${ARGN})
    ELSE()
        VERITAS_ANDROID_ADD_APPLICATION(${TARGET} ${ARGN})
    ENDIF()
ENDFUNCTION()
